# Production Environment Configuration
# Copy this file to .env.production and fill in your production values

# Supabase Configuration (REQUIRED)
VITE_SUPABASE_URL=https://your-project-id.supabase.co
VITE_SUPABASE_ANON_KEY=your_production_anon_key_here

# Environment
NODE_ENV=production

# Security Configuration (REQUIRED for production)
VITE_ENABLE_DEBUG=false
VITE_API_BASE_URL=https://your-production-domain.com
VITE_ENABLE_STRICT_CSP=true
VITE_ENABLE_HSTS=true

# Application Configuration
VITE_APP_NAME="Château Apéro Refund System"
VITE_APP_VERSION=1.0.0

# Rate Limiting (adjust based on your needs)
VITE_MAX_REFUNDS_PER_BATCH=1000
VITE_MAX_DAILY_REFUND_AMOUNT=100000

# Monitoring and Logging
VITE_ENABLE_AUDIT_LOGGING=true
VITE_LOG_LEVEL=error

# CORS Configuration (adjust for your domain)
VITE_ALLOWED_ORIGINS=https://your-production-domain.com,https://admin.your-domain.com

# Security Headers
VITE_CONTENT_SECURITY_POLICY="default-src 'self'; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline'"
VITE_REFERRER_POLICY=strict-origin-when-cross-origin

# Database Connection Limits
VITE_DB_MAX_CONNECTIONS=20
VITE_DB_CONNECTION_TIMEOUT=30000

# File Upload Limits
VITE_MAX_FILE_SIZE=50MB
VITE_ALLOWED_FILE_TYPES=.xml,.csv,.json

# Session Configuration
VITE_SESSION_TIMEOUT=3600000
VITE_SESSION_SECURE=true
VITE_SESSION_SAME_SITE=strict

# Backup and Recovery
VITE_ENABLE_AUTO_BACKUP=true
VITE_BACKUP_RETENTION_DAYS=2555